<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/value_0</item>
        <item name="android:layout_marginBottom">@dimen/value_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetBottom">@dimen/value_0</item>
        <item name="android:insetTop">@dimen/value_0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/big_size</item>
        <item name="cornerRadius">@dimen/value_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/value_8</item>
        <item name="iconTint">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MainActivityStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="OtherActivityStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textColor">@color/black</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MyIconStyle">
        <item name="tint">@color/grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="MyNavigationStyle">
        <item name="navigationIconTint">@color/black</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:background">@drawable/rounded_corner_view_light</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="MyIconForEditTextStyle">
        <item name="tint">@color/grey</item>
    </style>

    <style name="MySetsFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/value_16</item>
        <item name="android:paddingEnd">@dimen/value_12</item>
        <item name="android:paddingTop">@dimen/value_21</item>
        <item name="android:paddingBottom">@dimen/value_21</item>
        <item name="android:clickable">true</item>
    </style>







</resources>