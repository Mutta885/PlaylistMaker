<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_light_grey"
    android:orientation="vertical"
    tools:context=".library.ui.PlaylistScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playlist_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="@dimen/value_282"
            app:layout_anchor="@+id/scrollView2"
            app:layout_anchorGravity="center"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@id/left_guideline">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/value_16"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/value_16"/>

            <ImageView
                android:id="@+id/cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/arrow_back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/value_48"
                android:layout_height="wrap_content"
                android:contentDescription="@string/return_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow_back"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/playlist_name"
                style="@style/PlaylistNameTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_24"
                android:textSize="@dimen/big_size"
                app:layout_constraintEnd_toStartOf="@id/right_guideline"
                app:layout_constraintStart_toEndOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/cover"
                tools:text="Название альбома" />

            <TextView
                android:id="@+id/tdescription"
                style="@style/PlaylistTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_8"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toStartOf="@id/right_guideline"
                app:layout_constraintStart_toEndOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/playlist_name"
                tools:text="Описание"/>

            <LinearLayout
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_8"
                android:divider="@drawable/separator_black"
                android:orientation="horizontal"
                android:showDividers="middle"
                app:layout_constraintStart_toEndOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/tdescription">

                <TextView
                    android:id="@+id/tduration"
                    style="@style/PlaylistTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Продолжительность треков"/>

                <TextView
                    android:id="@+id/tv_quantity"
                    style="@style/PlaylistTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Количество треков" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/value_24"
                android:layout_height="@dimen/value_24"
                android:layout_marginTop="@dimen/value_16"
                android:contentDescription="@null"
                android:src="@drawable/share_playlist"
                app:layout_constraintStart_toEndOf="@id/left_guideline"
                app:layout_constraintTop_toBottomOf="@id/information"
                app:tint="@color/black" />


            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="@dimen/value_24"
                android:layout_height="@dimen/value_24"
                android:layout_marginStart="@dimen/value_16"
                android:contentDescription="@null"
                android:src="@drawable/menu"
                app:layout_constraintStart_toEndOf="@id/iv_share"
                app:layout_constraintTop_toTopOf="@id/iv_share" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/tracks_in_playlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_bottomsheet"
        android:orientation="vertical"

        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/value_266"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            style="@style/SeparatorStyle"
            android:layout_width="@dimen/value_48"
            android:layout_height="@dimen/value_4"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/value_8"
            android:layout_marginBottom="@dimen/value_4"
            android:background="@drawable/dash" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/value_8"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/list_view" />

        <TextView
            android:id="@+id/placeholder_message"
            style="@style/PlaceholderMessageTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/value_24"
            android:layout_marginTop="@dimen/value_16"
            android:lines="1"
            android:text="@string/empty_playlist"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_bottomsheet"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/value_16"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            style="@style/SeparatorStyle"
            android:layout_width="@dimen/value_48"
            android:layout_height="@dimen/value_4"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/value_8"
            android:layout_marginBottom="@dimen/value_4"
            android:background="@drawable/dash" />


        <include
            android:id="@+id/playlist_player"
            layout="@layout/playlist_player"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_64"
            android:layout_marginTop="@dimen/value_8" />

        <TextView
            android:id="@+id/tv_share"
            style="@style/PlaylistMenuTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/value_64"
            android:text="@string/share" />

        <TextView
            android:id="@+id/tv_edit"
            style="@style/PlaylistMenuTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/value_64"
            android:text="@string/edit" />

        <TextView
            android:id="@+id/tv_delete_playlist"
            style="@style/PlaylistMenuTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/value_64"
            android:text="@string/delete" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>