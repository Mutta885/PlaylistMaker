<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/libraryFragment">

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.playlistmaker.library.ui.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library">
        <action
            android:id="@+id/action_libraryFragment_to_player"
            app:destination="@id/player"
            app:popUpTo="@id/libraryFragment"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_libraryFragment_to_makerFragment"
            app:destination="@id/maker" />
        <action
            android:id="@+id/action_libraryFragment_to_playlistScreenFragment"
            app:destination="@id/playlist_screen" />

    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.search.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_player"
            app:destination="@id/player"
            app:popUpTo="@id/searchFragment"
            app:popUpToInclusive="false"
            />
    </fragment>
    <fragment
        android:id="@+id/player"
        android:name="com.example.playlistmaker.player.ui.Player"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" >
        <argument
            android:name="currentTrack"
            app:argType="string"
            app:nullable="false" />
        <action
            android:id="@+id/action_playerFragment_to_makerFragment"
            app:destination="@id/maker" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.settings.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/maker"
        android:name="com.example.playlistmaker.library.ui.MakerFragment"
        android:label="fragment_new_playlist"
        tools:layout="@layout/fragment_maker">
        <argument
            android:name="playlist"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/playlist_screen"
        android:name="com.example.playlistmaker.library.ui.PlaylistScreen"
        android:label="fragment_playlist"
        tools:layout="@layout/fragment_playlist_screen">
        <argument
            android:name="playlistId"
            app:argType="integer"
            app:nullable="false" />
        <action
            android:id="@+id/action_playlist_to_player"
            app:destination="@id/player" />
        <action
            android:id="@+id/action_playlist_to_makerFragment"
            app:destination="@id/maker" />
    </fragment>

</navigation>



