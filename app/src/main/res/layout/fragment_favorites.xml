<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/OtherActivityStyle"
    tools:context=".search.ui.SearchFragment">


    <ProgressBar android:id="@+id/progressBar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/value_140"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoriteList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/value_20"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/list_view"
        tools:itemCount="1"

        />



    <ImageView
        android:id="@+id/placeholder_image"
        android:layout_width="@dimen/value_120"
        android:layout_height="@dimen/value_120"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/value_106"
        android:layout_marginBottom="@dimen/value_16"
        android:src="@drawable/nothing_found"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/placeholder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LibraryHolder"
        android:text="@string/no_favorites"
        android:visibility="gone"
         />
</LinearLayout>