<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityStyle">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="OtherActivityStyle">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MyIconStyle">
        <item name="tint">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="MyNavigationStyle">
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:background">@drawable/rounded_corner_view_dark</item>
        <item name="android:textColorHint">@color/dark</item>
    </style>

    <style name="MyIconForEditTextStyle">
        <item name="tint">@color/dark</item>
    </style>

    <style name="PlayIconForSearchStyle">
        <item name="tint">@color/white</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackAttributesStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tiny_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SeparatorForSearchStyle">
        <item name="tint">@color/white</item>
    </style>

</resources>